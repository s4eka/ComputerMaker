@model List<ComputerMaker.Models.RAM>
<div id="memory">
    <h2>Memory:</h2>
    
    @{int min = ViewBag.computer.MaxMemoryCount == 0 ? 1 : ViewBag.computer.MaxMemoryCount;
        for (int i = 0; i < min; i++)
        {
            <h3>Slot @(i + 1):</h3>
            <div id="@("memory" + i.ToString())">
                <select onchange="onChange()">
                    <option value="0">nonSelect</option>
                        @foreach (var m in Model)
                        {
                            if (ViewBag.computer.MemoryId[i] == m.Id)
                            {
                                <option selected value="@m.Id">@m.Name</option>
                            }
                            else
                            {
                                <option value="@m.Id">@m.Name</option>
                            }
                        }
                </select>
            </div>
            }
        }

</div>